# Environment Variables

# Backend API URL (Heroku backend URL for production)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# User ID (In production, this would come from authentication)
NEXT_PUBLIC_USER_ID=demo_user

# OpenAI Domain Allowlist Key (required for OpenAI in production)
# Get this from OpenAI dashboard when deploying to custom domain
NEXT_PUBLIC_OPENAI_DOMAIN_KEY=your_domain_key_here
